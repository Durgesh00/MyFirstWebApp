<html>

<head> 
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <h1 style="text-align: center; font-weight: bolder;font-family: sans-serif;">List of Rides</h1> </head>
<title>Ride list </title>
<body>
  <table class="table">
  <tr>
    <th>Driver_Id</th>
    <th>Date</th>
    <th>Time</th>
    <th>Location</th>
    <th>Driver Name</th>
    <th>Request Count</th>
    <th>View Request</th>
  </tr>
  <% @all.each do |ele| %>
  <tr>
    <td><%=ele.id%></td>
    <td><%=ele.date%></td>
    <td><%=ele.time.strftime("%T:%M%p") %></td>
    <td><%=ele.location%></td>
    <td><%=ele.driver_name%></td>
    <td><%=ele.ride_requests.count%></td>
    <td><%=link_to 'View Requests', ride_ride_requests_path(ele) %></td>

  </tr>
  <% end%>
</table>

  

</body>
</html>
